{% extends '::base.html.twig' %}

{% block header_title %}
    <h2>
        {{ 'header.title.overview'|trans({'%entity%' : 'user'})|capitalize }}
    </h2>
{% endblock %}

{% block header_navigation %}
    <ul>
        <li><a class="iconAdd" href="{{ path('user_new') }}">{{ 'header.navigation.actions.add'|trans }}</a></li>
    </ul>
{% endblock %}

{% block main %}
    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('user_show', { 'id': entity.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('user_edit', { 'id': entity.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
